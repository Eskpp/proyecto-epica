<%- include("partials/head")%>
<body>
  <%- include("partials/navbar")%>

  <div class="container">
    <a href="/post/createpost" class="btn btn-outline-primary mt-4">Crear</a>
    <!-- agregar post-->
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Title</th>
          <th scope="col">Content</th>
          <th scope="col">Image</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach((post) => {%>
        <tr>
          <td class="fs-4 align-middle"><%= post.id%></td>
          <td class="fs-4 align-middle"><%= post.title%></td>
          <td class="fs-4 align-middle"><%= post.content%></td>
          <td>
            <div class="card" style="width: 4rem">
              <img src="<%= post.image %>" class="card-img-top" alt="imagen" />
            </div>
          </td>
          <td class="align-middle">
            <a href="/post/edit/<%= post.id %>" class="btn btn-primary">
              Editar
            </a>
            <a href="/post/delete/<%= post.id %>" class="btn btn-danger" onclick="return confirm('Esta seguro de eliminar el post <%= post.title %>')">
              Delete
            </a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
<%- include("partials/footer")%>
