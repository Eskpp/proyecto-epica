<%- include("partials/head")%>
<body>
  <%- include("partials/navbar")%>

  <% if (post) { %>
  <div class="container mt-4">
    <div class="card border-secondary">
      <div class="card-header">New Post</div>
      <div class="card-body">
        <form action="/post/update/" method="post">
            <input
              name="id"
              required
              value="<%= post.id %>"
              hidden
            />
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="title"
              id="title"
              class="form-control"
              placeholder="Title"
              tabindex="1"
              required
              value="<%= post.title %>"
            />
          </div>
          <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="5" tabindex="2"><%= post.content %></textarea>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Title</label>
            <input
              type="text"
              name="image"
              id="image"
              class="form-control"
              placeholder="Image url"
              tabindex="3"
              value="<%= post.image %>"
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/post"class="btn btn-secondary">Go back</a>
        </form>
      </div>
    </div>
  </div>
  <% } %>
</body>
<%- include("partials/footer")%>
